<Window x:Class="Petshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petshop"
        mc:Ignorable="d"
        Title="Petshop" Icon="petshop.ico" ResizeMode="NoResize" Height="380" Width="300" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="10">
        <StackPanel Margin="20">
            <Label Content="Gestiune Petshop" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator/>
            <Button Name="btnAngajati" Content="Angajati" Click="btnAngajati_Click"  Margin="50 10" Background="#545d6a" Foreground="White"/>
            <Button Name="btnProduse" Content="Produse" Margin="50 10" Background="#545d6a" Foreground="White" Click="btnProduse_Click"/>
            <Button Name="btnClienti" Content="Clienti" Margin="50 10" Background="#545d6a" Foreground="White" Click="btnClienti_Click"/>
            <Button Name="btnBonuri" Content="Bonuri" Margin="50 10" Background="#545d6a" Foreground="White" Click="btnBonuri_Click"/>

            <Button Name="btnExit" Content="Exit" Click="btnExit_Click" Margin="60 40" Background="Firebrick" Foreground="White"/>
        </StackPanel>
    </Border>
</Window>
